<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:local="clr-namespace:AvaloniaChartApplication"
             x:Class="AvaloniaChartApplication.LineChartView"
             x:DataType="local:LineChartView"
             Background="White">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            
            <!-- Chart Header -->
            <Border Background="White" 
                   CornerRadius="8" 
                   Padding="20">
                <StackPanel Spacing="10">
                    <TextBlock Text="âš¡ Real-time Chart Monitor" 
                              FontSize="22" 
                              FontWeight="Bold" 
                              Foreground="#10B981"/>
                    <TextBlock Text="Configure chart parameters and monitor data in real-time." 
                              FontSize="14" 
                              Foreground="#6B7280" 
                              TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
            
            <!-- Chart Controls -->
            <Border Background="White" 
                   CornerRadius="8" 
                   Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Control Panel -->
                    <StackPanel Grid.Row="0" Spacing="15">
                        <TextBlock Text="Chart Configuration" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#10B981"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="5">
                                <TextBlock Text="Points per Second" 
                                          FontWeight="SemiBold" 
                                          Foreground="#374151" 
                                          Margin="0,0,0,5"/>
                                <TextBox Name="PointsPerSecondTextBox" 
                                        Text="10" 
                                        Width="120"
                                        HorizontalAlignment="Left"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="5">
                                <TextBlock Text="Duration (minutes)" 
                                          FontWeight="SemiBold" 
                                          Foreground="#374151" 
                                          Margin="0,0,0,5"/>
                                <TextBox Name="DurationTextBox" 
                                        Text="5" 
                                        Width="120"
                                        HorizontalAlignment="Left"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="5">
                                <TextBlock Text="Dataset Count" 
                                          FontWeight="SemiBold" 
                                          Foreground="#374151" 
                                          Margin="0,0,0,5"/>
                                <TextBox Name="DatasetCountTextBox" 
                                        Text="3" 
                                        Width="120"
                                        HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Grid>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,15,0,0">
                            <Button Content="â–¶ï¸ Start Chart" 
                                   Background="#10B981" 
                                   Foreground="White" 
                                   CornerRadius="6"
                                   Padding="15,8"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Click="StartButton_Click"/>
                            
                            <Button Content="â¹ï¸ Stop Chart" 
                                   Background="#EF4444" 
                                   Foreground="White" 
                                   CornerRadius="6"
                                   Padding="15,8"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Click="StopButton_Click"/>
                            
                            <Button Content="ðŸ—‘ï¸ Clear Data" 
                                   Background="#6B7280" 
                                   Foreground="White" 
                                   CornerRadius="6"
                                   Padding="15,8"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Click="ClearButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Chart Display -->
                    <Border Grid.Row="1" 
                           Name="ChartContainer" 
                           IsVisible="False"
                           Margin="0,20,0,0"
                           Background="#F8FAFC"
                           CornerRadius="8"
                           Padding="20"
                           MinHeight="400">
                        <lvc:CartesianChart x:Name="Chart"
                                          Series="{Binding Series}"
                                          XAxes="{Binding XAxes}"
                                          YAxes="{Binding YAxes}"
                                          ZoomMode="X"
                                          TooltipPosition="Top"
                                          LegendPosition="Top"
                                          Background="White"
                                          CornerRadius="6"/>
                    </Border>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
