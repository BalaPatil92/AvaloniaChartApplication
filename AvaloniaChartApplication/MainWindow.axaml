<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaChartApplication.MainWindow"
        Width="1400" Height="900"
        Title="Chart Monitor - Medical Dashboard"
        Background="#F0FDF4">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="70"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- Header Navigation -->
    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
            Background="#10B981">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Toggle Button -->
        <Button Grid.Column="0"
               Name="MenuToggleBtn"
               Content="â˜°"
               Classes="toggle"
               Margin="15,0,10,0"
               Click="MenuToggle_Click"/>

        <!-- App Title -->
        <TextBlock Grid.Column="1"
                  Text="Chart Monitor"
                  FontSize="20"
                  FontWeight="Bold"
                  Foreground="White"
                  VerticalAlignment="Center"
                  Margin="10,0,30,0"/>

        <!-- Center Title -->
        <TextBlock Grid.Column="2"
                  Text="Home Dashboard"
                  FontSize="18"
                  FontWeight="Bold"
                  Foreground="White"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"/>

        <!-- Header Buttons -->
        <Button Grid.Column="3"
               Content="Medical Professional"
               Background="#3B82F6"
               Foreground="White"
               BorderBrush="Transparent"
               CornerRadius="6"
               Padding="15,8"
               Margin="10,0"/>

        <Button Grid.Column="4"
               Content="Help"
               Background="#3B82F6"
               Foreground="White"
               BorderBrush="Transparent"
               CornerRadius="6"
               Padding="15,8"
               Margin="5,0"/>

        <Button Grid.Column="5"
               Content="Logout"
               Background="#EF4444"
               Foreground="White"
               BorderBrush="Transparent"
               CornerRadius="6"
               Padding="15,8"
               Margin="5,0,15,0"/>
      </Grid>
    </Border>

    <!-- Side Menu -->
    <Border Grid.Row="1" Grid.Column="0"
            Name="SideMenuBorder"
            Width="280"
            Background="White"
            BorderBrush="#E5E7EB"
            BorderThickness="0,0,1,0">
      <ScrollViewer>
        <StackPanel Margin="0,20,0,0" Spacing="5">

          <!-- Medical Monitor Section -->
          <Border Background="#10B981"
                 CornerRadius="12"
                 Margin="15"
                 Padding="20">
            <StackPanel HorizontalAlignment="Center" Spacing="5">
              <TextBlock Text="ðŸ“Š"
                        FontSize="24"
                        HorizontalAlignment="Center"/>
              <TextBlock Text="Medical Monitor"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Center"/>
              <TextBlock Text="v2.0.1"
                        FontSize="12"
                        Foreground="#D1FAE5"
                        HorizontalAlignment="Center"/>
            </StackPanel>
          </Border>

          <!-- Navigation Section -->
          <TextBlock Text="NAVIGATION"
                    Margin="20,10,20,5"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="#6B7280"/>

          <Button Name="DashboardBtn"
                 Content="ðŸ  Home Dashboard"
                 Classes="menu active"
                 Click="Dashboard_Click"/>

          <!-- Monitoring Charts Section -->
          <TextBlock Text="MONITORING CHARTS"
                    Margin="20,20,20,5"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="#6B7280"/>

          <Button Name="PatientVitalsBtn"
                 Content="ðŸ“Š Patient Vitals"
                 Classes="menu"
                 Click="PatientVitals_Click"/>

          <Button Name="DialysisProgressBtn"
                 Content="ðŸ“ˆ Dialysis Progress"
                 Classes="menu"
                 Click="DialysisProgress_Click"/>

          <Button Name="RealtimeMonitorBtn"
                 Content="âš¡ Real-Time Monitor"
                 Classes="menu"
                 Click="OpenAnotherWindow_Click"/>

          <Button Name="MultiParameterBtn"
                 Content="ðŸ“‹ Multi-Parameter"
                 Classes="menu"
                 Click="MultiParameter_Click"/>

          <!-- System Status Section -->
          <TextBlock Text="System Status"
                    Margin="20,30,20,10"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#374151"/>

          <StackPanel Margin="20,0" Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="10">
              <TextBlock Text="Connection:"
                        FontSize="13"
                        Foreground="#6B7280"/>
              <Ellipse Width="12" Height="12" Fill="#10B981"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
              <TextBlock Text="Data Stream:"
                        FontSize="13"
                        Foreground="#6B7280"/>
              <Ellipse Width="12" Height="12" Fill="#10B981"/>
            </StackPanel>
          </StackPanel>

        </StackPanel>
      </ScrollViewer>
    </Border>

    <!-- Main Content Area -->
    <ContentControl Grid.Row="1" Grid.Column="1" Name="MainContentArea">
      <ScrollViewer>
        <StackPanel Margin="30" Spacing="25">

          <!-- Dashboard Header -->
          <Border Background="White"
                 CornerRadius="12"
                 Padding="25">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

              <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="Home Dashboard"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="#10B981"/>
                <TextBlock Text="Monitor patient vitals and dialysis parameters in real-time"
                          FontSize="14"
                          Foreground="#6B7280"/>
              </StackPanel>

              <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                <Button Content="Emergency Stop"
                       Background="#EF4444"
                       Foreground="White"
                       CornerRadius="8"
                       Padding="15,10"/>

                <Button Content="Start Monitor"
                       Background="#10B981"
                       Foreground="White"
                       CornerRadius="8"
                       Padding="15,10"/>
              </StackPanel>
            </Grid>
          </Border>

          <!-- Quick Stats -->
          <UniformGrid Columns="4" VerticalAlignment="Top">
            <Border Background="White"
                   CornerRadius="12"
                   Padding="20"
                   Margin="5">
              <StackPanel Spacing="8">
                <TextBlock Text="ðŸ“Š" FontSize="20"/>
                <TextBlock Text="Active Monitors"
                          FontSize="12"
                          Foreground="#6B7280"/>
                <TextBlock Text="4"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="#10B981"/>
              </StackPanel>
            </Border>

            <Border Background="White"
                   CornerRadius="12"
                   Padding="20"
                   Margin="5">
              <StackPanel Spacing="8">
                <TextBlock Text="âš¡" FontSize="20"/>
                <TextBlock Text="Data Points/sec"
                          FontSize="12"
                          Foreground="#6B7280"/>
                <TextBlock Text="156"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="#10B981"/>
              </StackPanel>
            </Border>

            <Border Background="White"
                   CornerRadius="12"
                   Padding="20"
                   Margin="5">
              <StackPanel Spacing="8">
                <TextBlock Text="ðŸ¥" FontSize="20"/>
                <TextBlock Text="Connected Devices"
                          FontSize="12"
                          Foreground="#6B7280"/>
                <TextBlock Text="8"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="#10B981"/>
              </StackPanel>
            </Border>

            <Border Background="White"
                   CornerRadius="12"
                   Padding="20"
                   Margin="5">
              <StackPanel Spacing="8">
                <TextBlock Text="âœ…" FontSize="20"/>
                <TextBlock Text="System Status"
                          FontSize="12"
                          Foreground="#6B7280"/>
                <TextBlock Text="Online"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="#10B981"/>
              </StackPanel>
            </Border>
          </UniformGrid>

          <!-- Chart Placeholder -->
          <Border Background="White"
                 CornerRadius="12"
                 Padding="25"
                 MinHeight="400">
            <StackPanel Spacing="15">
              <TextBlock Text="ðŸ“ˆ Real-time Patient Monitoring"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#10B981"/>

              <Border Background="#F9FAFB"
                     CornerRadius="8"
                     Padding="40"
                     MinHeight="300">
                <StackPanel VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Spacing="15">
                  <TextBlock Text="ðŸ“Š"
                            FontSize="48"
                            HorizontalAlignment="Center"/>
                  <TextBlock Text="Select a monitoring chart from the sidebar"
                            FontSize="16"
                            Foreground="#6B7280"
                            HorizontalAlignment="Center"/>
                  <TextBlock Text="to begin real-time visualization"
                            FontSize="14"
                            Foreground="#9CA3AF"
                            HorizontalAlignment="Center"/>
                </StackPanel>
              </Border>
            </StackPanel>
          </Border>

        </StackPanel>
      </ScrollViewer>
    </ContentControl>
  </Grid>
</Window>
