<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:local="clr-namespace:AvaloniaChartApplication"
             x:Class="AvaloniaChartApplication.LineChartView"
             x:DataType="local:LineChartView"
             Background="White">

    <ScrollViewer>
        <StackPanel Margin="40" Spacing="30">
            
            <!-- Chart Header -->
            <Border Background="White" 
                   CornerRadius="10" 
                   Padding="30">
                <StackPanel Spacing="15">
                    <TextBlock Text="📊 Real-time Line Chart" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#2E5BBA"/>
                    <TextBlock Text="Configure and visualize your data in real-time." 
                              FontSize="16" 
                              Foreground="#6B7280" 
                              TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
            
            <!-- Chart Controls -->
            <Border Background="White" 
                   CornerRadius="10" 
                   Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Control Panel -->
                    <StackPanel Grid.Row="0" Spacing="20">
                        <TextBlock Text="Chart Configuration" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#2E5BBA"/>
                        
                        <WrapPanel Orientation="Horizontal" ItemWidth="180">
                            <StackPanel Margin="10">
                                <TextBlock Text="Points per Second" 
                                          FontWeight="SemiBold" 
                                          Foreground="#374151" 
                                          Margin="0,0,0,5"/>
                                <TextBox x:Name="PointsPerSecondBox" 
                                        Text="10"
                                        Background="White"
                                        BorderBrush="#4A90E2"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="12,10"
                                        FontSize="14"/>
                            </StackPanel>

                            <StackPanel Margin="10">
                                <TextBlock Text="Duration (minutes)" 
                                          FontWeight="SemiBold" 
                                          Foreground="#374151" 
                                          Margin="0,0,0,5"/>
                                <TextBox x:Name="DurationBox" 
                                        Text="5"
                                        Background="White"
                                        BorderBrush="#4A90E2"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="12,10"
                                        FontSize="14"/>
                            </StackPanel>

                            <StackPanel Margin="10">
                                <TextBlock Text="Dataset Count" 
                                          FontWeight="SemiBold" 
                                          Foreground="#374151" 
                                          Margin="0,0,0,5"/>
                                <TextBox x:Name="DatasetCountBox" 
                                        Text="3"
                                        Background="White"
                                        BorderBrush="#4A90E2"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="12,10"
                                        FontSize="14"/>
                            </StackPanel>
                        </WrapPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Spacing="15" Margin="10,20,0,0">
                            <Button Content="▶️ Start Chart" 
                                   Background="#10B981" 
                                   Foreground="White" 
                                   BorderBrush="Transparent"
                                   CornerRadius="8"
                                   Padding="20,12"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Click="StartButton_Click"/>
                            
                            <Button Content="⏹️ Stop Chart" 
                                   Background="#EF4444" 
                                   Foreground="White" 
                                   BorderBrush="Transparent"
                                   CornerRadius="8"
                                   Padding="20,12"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Click="StopButton_Click"/>
                            
                            <Button Content="🗑️ Clear Data" 
                                   Background="#6B7280" 
                                   Foreground="White" 
                                   BorderBrush="Transparent"
                                   CornerRadius="8"
                                   Padding="20,12"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Click="ClearButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Chart Display -->
                    <Border Grid.Row="1" 
                           Name="ChartContainer" 
                           IsVisible="False"
                           Margin="0,30,0,0"
                           Background="#F8FAFC"
                           CornerRadius="8"
                           Padding="20"
                           MinHeight="400">
                        <lvc:CartesianChart x:Name="Chart"
                                          Series="{Binding Series}"
                                          XAxes="{Binding XAxes}"
                                          YAxes="{Binding YAxes}"
                                          ZoomMode="X"
                                          TooltipPosition="Top"
                                          LegendPosition="Top"
                                          Background="White"
                                          CornerRadius="6"/>
                    </Border>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
